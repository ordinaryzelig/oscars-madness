.ui.header.large Standings

%table#standings.ui.table.basic.compact.large.segment
  %thead
    %tr
      %th.player Player
      %th Points
  %tbody
    - entries.each do |entry|
      %tr
        %th.player.four.wide
          = player_label(entry.player, logged_in_player == entry.player ? 'blue' : 'black')
        %td
          .progress.ui{class: standing_progress_color(entry, entries)}
            .bar{style: "width: #{progress_percentage(entry, categories)}%"}
            %span.points= entry.points if show_progress_points?(contest_year)
