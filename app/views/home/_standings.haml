%table#standings.ui.table.basic.compact.large.segment
  %tbody
    - @entries.each do |entry|
      %tr
        %th.player.four.wide{:class => logged_in_player == entry.player ? 'error' : nil}
          .name= entry.player.name
        %td.avatar.one.wide
          .avatar= avatar(entry.player)
        %td.points
          .progress.ui.progress{class: standing_progress_color(entry, @entries)}
            .bar{style: "width: #{progress_percentage(entry, @categories)}%"}
            = entry.points
