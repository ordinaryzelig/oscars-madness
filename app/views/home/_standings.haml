%table#standings.ui.table.basic.compact.large.segment
  %tbody
    - @entries.each do |entry|
      %tr.player
        %th.name.four.wide{:class => logged_in_player == entry.player ? 'error' : nil}
          = entry.player.name
        %td.avatar.one.wide
          %img{src: entry.player.facebook_image_url}
        %td.points
          .progress.ui.progress{class: standing_progress_color(entry, @entries)}
            .bar{style: "width: #{progress_percentage(entry, @categories)}%"}
            = entry.points
