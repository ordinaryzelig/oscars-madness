.ui.header.large Standings

#standings.ui.list
  - entries.each do |entry|
    .item.ui.grid.middle.aligned
      .column.player.wide{class: standings_columns(:player)}
        = player_label(entry.player, logged_in_player == entry.player ? 'blue' : 'black')
      .column.wide{class: standings_columns(:progress)}
        .progress.ui{class: standing_progress_color(entry, entries)}
          .bar{style: "width: #{progress_percentage(entry, categories)}%"}
          .points= entry.points if show_progress_points?(contest_year)
