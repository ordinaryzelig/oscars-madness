%html{html_attrs}
  %head
    = stylesheet_link_tag 'screen', :cache => true
    %title= 'oscars madness!!!'

  %body

    #banner
      = link_to 'oscars madness!!!', root_path

    #logged_in_player
      - if logged_in?
        - if logged_in_player
          %div
            hi
            %span.name= logged_in_player.name
          = link_to 'see your picks', player_picks_path(logged_in_player)
          - if admin_config.picks_editable
            = link_to 'change your picks', player_edit_picks_path(logged_in_player)
          = link_to 'edit your profile', edit_player_path(logged_in_player)
        - elsif logged_in_as_admin?
          admin logged in
          %br
        = "#{link_to 'logout', logout_path}"
      - else
        = link_to 'login', login_path

    #flash
      - [:error, :notice, :warn].each do |type|
        - content_tag :div, :id => "flash_#{type}" do
          = flash[type]

    #main
      = yield

    #footer
